include <iostream>
#include <bits/stdc++.h>
#include<algorithm>
using namespace std;

int main() {
   long long int n;
   cin>>n;
	vector<long long int>a(n);
	for(long long int i=0;i<n;i++)
	{
	    cin>>a[i];
	}
	sort(a.begin(),a.end());
	
	long long int m=0;
	for(long long int i=0;i<n;i++)
	{ 
	 m= max(m,a[i]*(n-i));   
	}
	cout<<m;
	
	return 0;
}
