#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    vector<int>a(n);
	    for(int i=0;i<n;i++)
	    {  
	        cin>>a[i];
	    }
	    if(n%2!=0)
	    {
	        int v=a.front();
	        int l=a.back();
	        if(v==1&&l==1)
	        {
	            cout<<"yes"<<endl;
	        }
	    }
	    else
	    {
	        cout<<"no"<<endl;
	    }
	}
	
	return 0;
}
