#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int n,k;
	    cin>>n>>k;
	    vector<int>a(n);
	    for(int i=0;i<n;i++)
	    {
	        cin>>a[i];
	    }
	    sort(a.begin(),a.end(),greater<>());
	    int score=a[k-1];
	    int count=0;
	    for(int i=0;i<n;i++)
	    {
	        if(a[i]>=score)
	        {
	            count++;
	        }
	    }
	    cout<<count<<endl;
	}
	return 0;
}
